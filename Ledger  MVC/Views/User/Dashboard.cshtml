@model Ledger__MVC.Controllers.UserController.DashboardViewModel
@{
    ViewData["Title"] = "لوحة التحكم";
    Layout = "/Views/Shared/_LayoutDashboard.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/@@fortawesome/fontawesome-free@6.4.2/css/all.min.css" rel="stylesheet" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous">

<style>
    /* تعريف المتغيرات اللونية والتنسيق الأساسي */
    :root {
        --primary: #6366f1;
        --primary-light: #a5b4fc;
        --primary-dark: #4f46e5;
        --secondary: #f1f5f9;
        --success: #10b981;
        --warning: #f59e0b;
        --danger: #ef4444;
        --bg-primary: #ffffff;
        --bg-secondary: #f8fafc;
        --bg-card: #ffffff;
        --text-primary: #1e293b;
        --text-secondary: #64748b;
        --text-muted: #94a3b8;
        --border: #e2e8f0;
        --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
        --radius: 8px;
        --sidebar-width: 260px;
        --sidebar-collapsed: 60px;
        --header-height: 64px;
        --transition: 0.3s ease;
    }

    body {
        background-color: var(--bg-secondary);
        color: var(--text-primary);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        direction: rtl;
        text-align: right;
    }

    h2 {
        color: var(--text-primary);
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
    }

    h3 {
        color: var(--text-primary);
        font-size: 1.5rem;
        font-weight: 600;
        margin: 2rem 0 1rem;
    }

    /* Card Styling */
    .card {
        background-color: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow-md);
        margin-bottom: 1.5rem;
        overflow: hidden;
        transition: transform var(--transition), box-shadow var(--transition);
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }

    .card-header {
        background-color: var(--primary);
        color: #fff;
        padding: 1rem 1.5rem;
        font-weight: 600;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .card.bg-success .card-header {
        background-color: var(--success);
    }

    .card.bg-info .card-header {
        background-color: var(--primary);
    }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0;
        color: var(--text-primary);
    }

    /* Table Styling */
    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: var(--text-primary);
        border-collapse: separate;
        border-spacing: 0;
    }

        .table thead th {
            background-color: var(--secondary);
            color: var(--text-primary);
            font-weight: 600;
            padding: 1rem;
            border-bottom: 2px solid var(--border);
            text-align: right;
        }

        .table tbody td {
            padding: 1rem;
            border-top: 1px solid var(--border);
            text-align: right;
        }

        .table tbody tr:nth-of-type(odd) {
            background-color: var(--bg-primary);
        }

        .table tbody tr:nth-of-type(even) {
            background-color: var(--bg-secondary);
        }

        .table tbody tr:hover {
            background-color: var(--primary-light);
        }

        .table .btn-sm {
            padding: 0.4rem 0.8rem;
            font-size: 0.85rem;
            display: inline-flex;
            align-items: center;
            gap: 0.3rem;
        }

        .table .btn-primary {
            background-color: var(--primary);
            border-color: var(--primary);
            color: #fff;
            transition: background-color var(--transition);
        }

            .table .btn-primary:hover {
                background-color: var(--primary-dark);
                border-color: var(--primary-dark);
            }

        .table .btn-warning {
            background-color: var(--warning);
            border-color: var(--warning);
            color: #fff;
            transition: background-color var(--transition);
        }

            .table .btn-warning:hover {
                background-color: #e69500;
                border-color: #e69500;
            }

    /* Badge Styling */
    .badge {
        padding: 0.5rem 1rem;
        border-radius: var(--radius);
        font-size: 0.85rem;
        font-weight: 500;
    }

        .badge.bg-success {
            background-color: var(--success);
            color: #fff;
        }

        .badge.bg-warning {
            background-color: var(--warning);
            color: #fff;
        }

        .badge.bg-danger {
            background-color: var(--danger);
            color: #fff;
        }

    /* Chart Styling */
    #monthlyRevenueChart {
        width: 100%;
        max-width: 900px;
        margin: 2rem auto;
        background-color: var(--bg-card);
        border: 1px solid var(--border);
        border-radius: var(--radius);
        padding: 1.5rem;
        box-shadow: var(--shadow-md);
    }

    /* Responsive Adjustments */
    @@media (max-width: 767.98px) {
        .col-md-6 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .container {
            padding: 1rem;
        }

        .table-responsive {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .table {
            min-width: 700px;
        }
    }
</style>

<div class="container">
    <h2 class="text-center mb-4"><i class="fas fa-tachometer-alt me-2"></i> لوحة التحكم</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="card bg-success text-white mb-3">
                <div class="card-header">
                    <i class="fas fa-users fa-lg"></i> المستخدمون النشطون
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.ActiveUsers</h5>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card bg-info text-white mb-3">
                <div class="card-header">
                    <i class="fas fa-money-bill-wave fa-lg"></i> الإيرادات الشهرية
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.MonthlyRevenue.ToString("N2", new System.Globalization.CultureInfo("ar-EG")) جنيه مصري</h5>
                </div>
            </div>
        </div>
    </div>

    

    <h3 class="mt-4"><i class="fas fa-user-plus me-2"></i> المستخدمون الجدد</h3>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>الاسم</th>
                    <th>نوع الاشتراك</th>
                    <th>تاريخ الانتهاء</th>
                    <th>الحالة</th>
                    <th>إجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.RecentUsers)
                {
                    <tr>
                        <td>@user.FullName</td>
                        <td>@user.SubscriptionTypeDisplayName</td>
                        <td>@user.SubscriptionEndDate.ToString("yyyy-MM-dd", new System.Globalization.CultureInfo("ar-EG"))</td>
                        <td>
                            @{
                                string statusText = user.IsActive
                                ? (user.SubscriptionEndDate >= DateTime.Now ? "نشط" : "منتهي")
                                : "محظور";
                                string badgeClass = user.IsActive
                                ? (user.SubscriptionEndDate >= DateTime.Now ? "bg-success" : "bg-warning")
                                : "bg-danger";
                            }
                            <span class="badge @badgeClass">@statusText</span>
                        </td>
                        <td>
                            <a href="@Url.Action("Update", "User", new { id = user.Id })" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> تعديل
                            </a>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        const ctx = document.getElementById('monthlyRevenueChart').getContext('2d');
        const monthlyRevenueChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.MonthlyRevenues.Select(m => $"'{new DateTime(DateTime.Now.Year, m.Month, 1).ToString("MMMM", new System.Globalization.CultureInfo("ar-EG"))}'")))],
                datasets: [{
                    label: 'الإيرادات (جنيه مصري)',
                    data: [@Html.Raw(string.Join(",", Model.MonthlyRevenues.Select(m => m.Revenue)))],
                    backgroundColor: 'rgba(99, 102, 241, 0.2)',
                    borderColor: 'var(--primary)',
                    borderWidth: 2,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top',
                        labels: {
                            font: {
                                size: 14,
                                family: 'Segoe UI'
                            },
                            color: 'var(--text-primary)',
                            boxWidth: 20
                        },
                        rtl: true,
                        textDirection: 'rtl'
                    },
                    tooltip: {
                        enabled: true,
                        rtl: true,
                        textDirection: 'rtl',
                        rappro

                                callbacks: {
                            label: function (context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += new Intl.NumberFormat('ar-EG', { style: 'currency', currency: 'EGP' }).format(context.parsed.y);
                                }
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        ticks: {
                            color: 'var(--text-secondary)',
                            font: {
                                size: 12,
                                family: 'Segoe UI'
                            }
                        },
                        grid: {
                            color: 'rgba(226, 232, 240, 0.3)',
                            borderColor: 'var(--border)'
                        }
                    },
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'المبلغ (جنيه مصري)',
                            color: 'var(--text-primary)',
                            font: {
                                size: 14,
                                family: 'Segoe UI',
                                weight: 'bold'
                            }
                        },
                        ticks: {
                            color: 'var(--text-secondary)',
                            font: {
                                size: 12,
                                family: 'Segoe UI'
                            },
                            callback: function (value) {
                                return new Intl.NumberFormat('ar-EG', { style: 'currency', currency: 'EGP' }).format(value);
                            }
                        },
                        grid: {
                            color: 'rgba(226, 232, 240, 0.3)',
                            borderColor: 'var(--border)'
                        }
                    }
                }
            }
        });
    </script>
}