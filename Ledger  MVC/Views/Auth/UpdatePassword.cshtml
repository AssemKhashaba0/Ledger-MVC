@model Ledger__MVC.Controllers.AuthController.UpdatePasswordViewModel
@{
    ViewData["Title"] = "تحديث كلمة السر";
    Layout = null;
}

<style>
    /* المتغيرات الأساسية للتصميم */
    :root {
        --primary: #5A67D8; /* لون أزرق-بنفسجي أساسي */
        --primary-light: #C3DAFE; /* درجة أفتح من الأساسي */
        --primary-dark: #434190; /* درجة أغمق من الأساسي */
        --secondary: #EDF2F7; /* خلفية ثانوية فاتحة */
        --success: #48BB78; /* لون النجاح */
        --danger: #E53E3E; /* لون الخطر/الأخطاء */
        --bg-primary: #FFFFFF; /* خلفية البطاقات والعناصر الرئيسية */
        --bg-secondary: #F7FAFC; /* خلفية الصفحة العامة */
        --text-primary: #2D3748; /* لون النص الأساسي الداكن */
        --text-secondary: #718096; /* لون النص الثانوي */
        --border: #E2E8F0; /* لون الحدود */
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --radius-sm: 0.375rem; /* حواف مستديرة صغيرة */
        --radius-md: 0.5rem; /* حواف مستديرة متوسطة */
        --transition: all 0.3s ease;
    }

    /* خطوط جوجل العربية - يمكنك استبدالها بخطوط أخرى */
    @@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap');

    body {
        font-family: 'Cairo', sans-serif;
        background-color: var(--bg-secondary);
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 0;
        padding: 20px;
        box-sizing: border-box;
        direction: rtl; /* لضمان الاتجاه من اليمين لليسار */
        text-align: right; /* لمحاذاة النص لليمين */
    }

    .update-password-container {
        background-color: var(--bg-primary);
        padding: 40px;
        border-radius: var(--radius-md);
        box-shadow: var(--shadow-md);
        width: 100%;
        max-width: 480px; /* عرض مناسب للنموذج */
        text-align: center; /* لمركزة اللوجو والعنوان */
    }

    .logo-container {
        margin-bottom: 30px;
    }

    .logo {
        max-width: 120px; /* حجم اللوجو */
        height: auto;
        display: block; /* لضمان توسيط الصورة */
        margin: 0 auto; /* توسيط الصورة */
    }

    h2 {
        color: var(--primary-dark);
        font-size: 2.2em;
        margin-bottom: 30px;
        font-weight: 700;
    }

    .form-group {
        margin-bottom: 25px;
        text-align: right; /* لضمان محاذاة التسميات إلى اليمين داخل الحاوية */
    }

    .form-group label {
        display: block;
        margin-bottom: 10px;
        color: var(--text-primary);
        font-weight: 600;
        font-size: 1.05em;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid var(--border);
        border-radius: var(--radius-sm);
        box-sizing: border-box;
        font-size: 1em;
        color: var(--text-primary);
        background-color: var(--bg-primary);
        transition: border-color var(--transition), box-shadow var(--transition);
    }

    .form-control:focus {
        border-color: var(--primary);
        outline: none;
        box-shadow: 0 0 0 3px var(--primary-light);
    }

    .text-danger {
        color: var(--danger);
        font-size: 0.875em;
        margin-top: 8px;
        display: block;
        text-align: right; /* لمحاذاة رسائل الخطأ لليمين */
    }

    .btn-primary {
        width: 100%;
        padding: 15px 20px;
        border: none;
        border-radius: var(--radius-md);
        background-color: var(--primary);
        color: white;
        font-size: 1.15em;
        font-weight: 600;
        cursor: pointer;
        transition: background-color var(--transition), transform var(--transition), box-shadow var(--transition);
        margin-top: 25px;
        letter-spacing: 0.5px; /* تباعد بسيط للحروف */
    }

    .btn-primary:hover {
        background-color: var(--primary-dark);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .btn-primary:active {
        transform: translateY(0);
        box-shadow: var(--shadow-sm);
    }
</style>

<div class="update-password-container">
    <div class="logo-container">
        <img src="~/IMG/ASVS Logo.png" alt="شعار الشركة" class="logo" />
    </div>

    <h2>تحديث كلمة السر</h2>
    <form asp-action="UpdatePassword" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CurrentPassword">كلمة المرور القديمه</label>
            <input asp-for="CurrentPassword" class="form-control" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewPassword">كلمة المرور الجديده</label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">تاكيد كلمة المرور</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">تحديث</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}