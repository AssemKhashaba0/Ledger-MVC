@{
    ViewData["Title"] = "الرئيسية";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>دفتر - أسهل دفتر إلكتروني لإدارة العملاء والموردين</title>
    <link rel="icon" type="image/png" href="ASVS Logo.png">
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Google Font: Inter -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        /* Custom CSS Variables based on user's input */
        :root {
            --primary: #6366f1;
            --primary-light: #a5b4fc;
            --primary-dark: #4f46e5;
            --secondary: #f1f5f9;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --bg-primary: #ffffff;
            --bg-secondary: #f8fafc;
            --bg-card: #ffffff;
            --text-primary: #1e293b;
            --text-secondary: #64748b;
            --text-muted: #94a3b8;
            --border: #e2e8f0;
            --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
            --radius: 8px;
            --sidebar-width: 260px;
            --sidebar-collapsed: 60px;
            --header-height: 64px;
            --transition: 0.3s ease;
        }

        /* Base styles using custom variables */
        body {
            font-family: 'Inter', sans-serif;
            direction: rtl; /* Right-to-left for Arabic */
            text-align: right; /* Default text alignment for Arabic */
            background-color: var(--bg-primary);
            color: var(--text-primary);
            line-height: 1.6;
        }

        /* Custom Tailwind-like utility classes for colors and shadows */
        .bg-background {
            background-color: var(--bg-primary);
        }

        .bg-surface {
            background-color: var(--bg-card);
        }

        .bg-primary {
            background-color: var(--primary);
        }

        .bg-accent {
            background-color: var(--primary-light);
        }

        .bg-success {
            background-color: var(--success);
        }

        .bg-danger {
            background-color: var(--danger);
        }

        .text-main {
            color: var(--text-primary);
        }

        .text-secondary {
            color: var(--text-secondary);
        }

        .text-primary {
            color: var(--primary);
        }

        .text-accent {
            color: var(--primary-light);
        }

        .text-success {
            color: var(--success);
        }

        .text-danger {
            color: var(--danger);
        }

        .text-muted {
            color: var(--text-muted);
        }
        /* Added text-muted utility */


        .border-base {
            border-color: var(--border);
        }

        .shadow-base {
            box-shadow: var(--shadow);
        }

        .shadow-md-base {
            box-shadow: var(--shadow-md);
        }

        .shadow-lg-base {
            box-shadow: var(--shadow-lg);
        }

        .rounded-base {
            border-radius: var(--radius);
        }

        .transition-base {
            transition: all var(--transition);
        }

        /* Animations */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes bounceIn {
            0% {
                transform: scale(0.3);
                opacity: 0;
            }

            50% {
                transform: scale(1.05);
                opacity: 1;
            }

            70% {
                transform: scale(0.9);
            }

            100% {
                transform: scale(1);
            }
        }

        .animate-fadeIn {
            animation: fadeIn 1s ease-out forwards;
        }

        .animate-slideInRight {
            animation: slideInRight 1s ease-out forwards;
        }

        .animate-bounceIn {
            animation: bounceIn 0.8s ease-out forwards;
        }

        /* Specific animation delays */
        .delay-100 {
            animation-delay: 0.1s;
        }

        .delay-200 {
            animation-delay: 0.2s;
        }

        .delay-300 {
            animation-delay: 0.3s;
        }

        .delay-400 {
            animation-delay: 0.4s;
        }

        .delay-500 {
            animation-delay: 0.5s;
        }

        .delay-600 {
            animation-delay: 0.6s;
        }

        .delay-700 {
            animation-delay: 0.7s;
        }

        .delay-800 {
            animation-delay: 0.8s;
        }

        .delay-900 {
            animation-delay: 0.9s;
        }

        .delay-1000 {
            animation-delay: 1s;
        }


        /* Countdown specific styles */
        .countdown-timer {
            font-family: 'Inter', sans-serif;
            font-weight: 700;
            font-size: 2.5rem; /* Larger for impact */
            color: var(--primary); /* Primary color for countdown */
            text-shadow: 1px 1px 3px rgba(0,0,0,0.1);
        }

        .countdown-label {
            font-size: 0.9rem;
            color: var(--text-secondary);
            margin-top: -5px;
        }

        /* Header specific styling */
        .header-logo {
            font-size: 2.2rem;
            font-weight: 800;
            color: var(--primary);
        }

            .header-logo span {
                color: var(--text-primary);
            }

        .header-nav a {
            color: var(--text-secondary);
            font-weight: 600;
            transition: color var(--transition);
        }

            .header-nav a:hover {
                color: var(--primary);
            }

        /* Buttons */
        .btn-primary {
            background-color: var(--primary);
            color: var(--bg-primary);
            padding: 12px 28px;
            border-radius: var(--radius);
            font-weight: 600;
            box-shadow: var(--shadow-md);
            transition: background-color var(--transition), box-shadow var(--transition);
        }

            .btn-primary:hover {
                background-color: var(--primary-dark);
                box-shadow: var(--shadow-lg);
            }

        .btn-secondary {
            background-color: var(--primary-light);
            color: var(--bg-primary);
            padding: 12px 28px;
            border-radius: var(--radius);
            font-weight: 600;
            box-shadow: var(--shadow-md);
            transition: background-color var(--transition), box-shadow var(--transition);
        }

            .btn-secondary:hover {
                background-color: var(--primary);
                box-shadow: var(--shadow-lg);
            }

        .btn-outline {
            background-color: transparent;
            color: var(--primary);
            border: 2px solid var(--primary);
            padding: 10px 26px;
            border-radius: var(--radius);
            font-weight: 600;
            transition: background-color var(--transition), color var(--transition);
        }

            .btn-outline:hover {
                background-color: var(--primary);
                color: var(--bg-primary);
            }

        /* أزرار جميلة جديدة */
        .btn-fancy {
            background: #6366F1;
            color: white;
            padding: 12px 28px;
            border-radius: var(--radius);
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(99, 102, 241, 0.4);
            border: none;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            z-index: 1;
            text-align: center;
            display: inline-block;
        }

            .btn-fancy:hover {
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(99, 102, 241, 0.6);
            }

            .btn-fancy:active {
                transform: translateY(1px);
            }

            .btn-fancy::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(45deg, var(--primary-dark), var(--primary));
                opacity: 0;
                z-index: -1;
                transition: opacity 0.3s ease;
            }

            .btn-fancy:hover::before {
                opacity: 1;
            }

        /* زر مع تأثير نبض */
        .btn-pulse {
            background-color: var(--primary);
            color: white;
            padding: 12px 28px;
            border-radius: var(--radius);
            font-weight: 600;
            box-shadow: 0 0 0 0 rgba(99, 102, 241, 0.7);
            border: none;
            cursor: pointer;
            animation: pulse 2s infinite;
            display: inline-block;
            text-align: center;
        }

        /* Override for buttons on primary background */
        .bg-primary .btn-pulse,
        .bg-primary .btn-fancy,
        .bg-primary .btn-glow,
        .bg-primary .btn-3d {
            background-color: white;
            color: var(--primary);
            box-shadow: 0 6px 20px rgba(255, 255, 255, 0.5);
            transform: translateY(-3px);
            transition: all 0.3s ease;
        }

            .bg-primary .btn-pulse:hover,
            .bg-primary .btn-fancy:hover,
            .bg-primary .btn-glow:hover,
            .bg-primary .btn-3d:hover {
                background-color: var(--primary);
                color: white;
            }

        @@keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(99, 102, 241, 0.7);
            }

            70% {
                box-shadow: 0 0 0 10px rgba(99, 102, 241, 0);
            }

            100% {
                box-shadow: 0 0 0 0 rgba(99, 102, 241, 0);
            }
        }

        /* زر مع تأثير توهج */
        .btn-glow {
            background-color: var(--primary);
            color: white;
            padding: 12px 28px;
            border-radius: var(--radius);
            font-weight: 600;
            border: none;
            cursor: pointer;
            position: relative;
            z-index: 1;
            overflow: hidden;
            display: inline-block;
            text-align: center;
        }

            .btn-glow::after {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: conic-gradient( transparent, rgba(255, 255, 255, 0.3), transparent 30% );
                opacity: 0;
                z-index: -1;
                transition: opacity 0.3s ease;
            }

            .btn-glow:hover::after {
                opacity: 1;
                animation: rotate 2s linear infinite;
            }

        @@keyframes rotate {
            100% {
                transform: rotate(360deg);
            }
        }

        /* زر مع تأثير 3D */
        .btn-3d {
            background-color: var(--primary);
            color: white;
            padding: 12px 28px;
            border-radius: var(--radius);
            font-weight: 600;
            border: none;
            cursor: pointer;
            position: relative;
            box-shadow: 0 6px 0 var(--primary-dark);
            transition: all 0.1s ease;
            top: 0;
            display: inline-block;
            text-align: center;
        }

            .btn-3d:hover {
                top: 2px;
                box-shadow: 0 4px 0 var(--primary-dark);
            }

            .btn-3d:active {
                top: 6px;
                box-shadow: 0 0 0 var(--primary-dark);
            }

        /* Feature Cards */
        .feature-card {
            background-color: var(--bg-card);
            border-radius: var(--radius);
            box-shadow: var(--shadow-md);
            transition: all var(--transition);
            position: relative;
            overflow: hidden;
        }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(99, 102, 241, 0.4);
                background-color: var(--primary-light);
                color: white;
            }

                .feature-card:hover h3 {
                    color: white;
                }

                .feature-card:hover p {
                    color: rgba(255, 255, 255, 0.9);
                }

                .feature-card:hover .feature-icon-wrapper {
                    background-color: white;
                    color: var(--primary);
                }

        .card-animate {
            animation: bounceIn 0.8s ease-out forwards;
        }

        .feature-icon-wrapper {
            background-color: var(--primary-light);
            color: var(--primary-dark);
            width: 70px;
            height: 70px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            font-size: 2.5rem;
            margin-bottom: 1.5rem;
        }

        /* Testimonial Card */
        .testimonial-card {
            background-color: var(--bg-card);
            border-radius: var(--radius);
            box-shadow: var(--shadow-md);
            transition: all var(--transition);
            position: relative;
            overflow: hidden;
        }

            .testimonial-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(99, 102, 241, 0.4);
            }

            .testimonial-card::before {
                content: '\201C';
                position: absolute;
                top: -15px;
                left: 10px;
                font-size: 100px;
                color: #6366F1 !important;
                opacity: 0.5;
                font-family: serif;
            }

            .testimonial-card:hover::before {
                color: #6366F1;
                opacity: 1;
            }

            .testimonial-card .fa-star {
                color: #f59e0b;
            }

        /* Contact Form */
        .form-input, .form-textarea {
            background-color: var(--bg-secondary);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            padding: 14px;
            color: var(--text-primary);
            transition: border-color var(--transition), box-shadow var(--transition);
        }

            .form-input:focus, .form-textarea:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
            }

        /* How to Subscribe Steps */
        .step-card {
            background-color: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            box-shadow: var(--shadow-md);
            padding: 30px;
            text-align: center;
            display: flex;
            flex-direction: column;
            align-items: center;
            transition: transform var(--transition), box-shadow var(--transition);
        }

            .step-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--shadow-lg);
            }

        .step-number {
            background-color: var(--primary);
            color: var(--bg-primary);
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
        }

        .step-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 1rem;
        }

        .step-description {
            color: var(--text-secondary);
            font-size: 1rem;
        }
    </style>
</head>
<body class="antialiased">

    <!-- عرض رسائل TempData بـ Tailwind -->
    @if (TempData["Success"] != null)
    {
        <div class="fixed top-5 right-5 z-50 max-w-md bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded shadow-lg" role="alert">
            <div class="flex items-center">
                <i class="fas fa-check-circle mr-2"></i>
                <span>@TempData["Success"]</span>
                <button onclick="this.parentElement.parentElement.remove()" class="ml-auto text-green-500 hover:text-green-700">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="fixed top-5 right-5 z-50 max-w-md bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded shadow-lg" role="alert">
            <div class="flex items-center">
                <i class="fas fa-exclamation-triangle mr-2"></i>
                <span>@TempData["Error"]</span>
                <button onclick="this.parentElement.parentElement.remove()" class="ml-auto text-red-500 hover:text-red-700">
